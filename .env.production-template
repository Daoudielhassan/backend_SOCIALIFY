# ===============================================
# SOCIALIFY BACKEND - ENVIRONMENT CONFIGURATION
# ===============================================
# Copy this to .env and configure with your actual values
# Required parameters are marked with (REQUIRED)

# ===============================================
# DATABASE CONFIGURATION (REQUIRED)
# ===============================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/socialtify

# Legacy database components (used for fallback configuration)
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=socialtify

# ===============================================
# JWT AUTHENTICATION (REQUIRED)
# ===============================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# ===============================================
# GOOGLE OAUTH (REQUIRED for Gmail integration)
# ===============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ===============================================
# META/FACEBOOK OAUTH (REQUIRED for WhatsApp Business)
# ===============================================
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_REDIRECT_URI=http://localhost:8000/api/whatsapp/v2/oauth/callback

# ===============================================
# WHATSAPP CONFIGURATION
# ===============================================
# Legacy V1 WhatsApp (for backward compatibility)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Webhook verification (REQUIRED for WhatsApp webhooks)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-secure-webhook-verify-token

# ===============================================
# APPLICATION CONFIGURATION
# ===============================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000
ADMIN_KEY=your-secure-admin-key

# ===============================================
# SECURITY & PRIVACY (REQUIRED)
# ===============================================
ENCRYPTION_KEY=your-32-character-encryption-key-here-replace-this-with-real-key
DATA_RETENTION_DAYS=90
PASSWORD_SALT=your-secure-password-salt

# ===============================================
# AI ENGINE (Optional)
# ===============================================
IA_ENGINE_URL=http://localhost:8080

# ===============================================
# FEATURE FLAGS
# ===============================================
ENABLE_GMAIL=true
ENABLE_WHATSAPP=true
ENABLE_AI_PREDICTIONS=true

# ===============================================
# DEVELOPMENT & DEBUGGING
# ===============================================
DEBUG=false
LOG_LEVEL=INFO

# ===============================================
# CACHING (Optional)
# ===============================================
REDIS_URL=redis://localhost:6379/0

# ===============================================
# PRODUCTION NOTES:
# ===============================================
# 1. Generate strong random values for JWT_SECRET and ENCRYPTION_KEY
# 2. Use proper database credentials and HTTPS URLs in production
# 3. Set DEBUG=false in production
# 4. Configure proper CORS origins for your domain
# 5. Use environment-specific redirect URIs for OAuth
# 6. Keep all secrets secure and never commit them to version control
# 7. For production, use ngrok or a proper domain for META_REDIRECT_URI
# 8. Ensure ENCRYPTION_KEY is exactly 32 characters for AES-256
# 9. Use strong, unique values for WHATSAPP_WEBHOOK_VERIFY_TOKEN
# 10. Set appropriate DATA_RETENTION_DAYS based on your privacy policy
